   "source": [
    "V1 = [1, 0]\n",
    "V2 = [0, 1] \n",
    "t = pl.linspace(0, math.pi, 10000) \n",
    "P, R = [], []"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 50,
   "metadata": {},
   "outputs": [],
   "source": [
    "for p in np.arange(0.1, 5.05, 0.05):\n",
    "    P.append(p)\n",
    "    solve_1 = si.odeint(f, V1, t)\n",
    "    solve_2 = si.odeint(f, V2, t)\n",
    "    C = np.transpose(np.array([solve_1[-1], solve_2[-1]]))\n",
    "    R.append(max(abs(np.linalg.eig(C)[0])))"
   ]
