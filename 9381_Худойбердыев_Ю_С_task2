    "def b(t):\n",
    "    return 1/(2+math.sin(2*t))\n",
    "\n",
    "def f(u, t):\n",
    "    return [u[1], -(p + b(t))*u[0]]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 49,
